<div class="row">
  <div class="col col-sm-4 col-sm-offset-4">
    <div class="panel panel-default">
      <div class="panel-heading inline-block">
        <h2>Add a task</h2>
      </div>
      <div class="panel-body">
        <div class="input-group">
        <%= form_tag "/list/#{params[:list_id]}/tasks", method: "post" do %>
          <%= text_field_tag :title, nil, placeholder: "Task Title", class: "form-control" %>
          <%= text_field_tag :description, nil, placeholder: "Task Discription", class: "form-control"  %>
          <%= submit_tag "Submit", name: nil, class: "btn" %>
        <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
