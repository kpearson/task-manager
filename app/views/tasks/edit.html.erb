<div class="row">
  <div class="col col-sm-4 col-sm-offset-4">
    <div class="panel panel-default">
      <div class="panel-heading inline-block">
        <h2>Edit Task</h2>
      </div>
      <div class="panel-body">
        <div class="input-group">
          <%= form_for @task, url: "/list/#{@task.list_id}/tasks/#{@task.id}" do |f| %>
          <%= f.text_field :title %>
          <%= f.text_field :description %>
          <%= f.submit %>
        <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
