<table class="table table-hover">
  <thead>
    <tr>
      <td class="value h4">Title</td>
      <td class="value h4">Description</td>
      <td class="value h4">Due Date</td>
      <td><%= link_to "View Completed", completed_tasks_path(list.id), class: "btn btn-default" %></td>
    </tr>
  </thead>
  <tbody>
  <% list.incomplete_tasks.each do |task| %>
    <tr>
      <td><%= link_to task.title, edit_list_task_path(list_id: list.id, id: task.id) %></td>
      <td><%= task.description %></td>
      <td><%= task.due_date %></td>
      <td><%= button_to "Complete", complete_task_path(list_id: list.id, id: task.id, complete: true), method: "patch", class: "btn btn-info" %></td>
    </tr>
  <% end %>
  </tbody>
</table>
